    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Magento\Framework\View\Element\Template" name="checkout.cart.btn_hokodo_checkout"
                   template="Hokodo_BNPL::checkout/cart/button.phtml" before="checkout.cart.methods.onepage.bottom"
