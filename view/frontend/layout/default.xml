<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <block class="Magento\Framework\View\Element\Template" name="sdkLoader"
               template="Hokodo_BNPL::sdk/core.phtml"
               ifconfig="payment/hokodo_bnpl/active">
            <arguments>
                <argument name="viewModel" xsi:type="object">Hokodo\BNPL\ViewModel\SdkLoader</argument>
            </arguments>
        </block>
        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template" name="banner-credit-limit"
                   template="Hokodo_BNPL::sdk/marketing/credit-limit-top.phtml"
                   ifconfig="payment/hokodo_bnpl/active" before="-"/>
        </referenceContainer>
        <referenceBlock name="minicart">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">Hokodo_BNPL/minicart/content</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
