<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template" name="hokodo.sdkLoader.top"
                   template="Hokodo_BNPL::sdk/core.phtml"
                   ifconfig="payment/hokodo_bnpl/marketing/enable_top" before="hokodo.credit-limit-top">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Hokodo\BNPL\ViewModel\SdkLoader</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="hokodo.credit-limit-top"
                   template="Hokodo_BNPL::sdk/marketing/banner.phtml"
                   ifconfig="payment/hokodo_bnpl/marketing/enable_top" before="-">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Hokodo\BNPL\ViewModel\Marketing\CreditLimitBanners</argument>
                    <argument name="bannerTypeCredit" xsi:type="string">credit-limit-top-strip</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
