<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Hokodo_BNPL::css/product.css"/>
    </head>
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Framework\View\Element\Template" name="btn_hokodo_checkout"
                   template="Hokodo_BNPL::product/button.phtml" after="product.info.overview"
                   ifconfig="payment/hokodo_bnpl/active">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Hokodo\BNPL\ViewModel\ProductButton</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="sdkLoader"
                   template="Hokodo_BNPL::sdk/core.phtml"
                   ifconfig="payment/hokodo_bnpl/active">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Hokodo\BNPL\ViewModel\SdkLoader</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="testModal"
                   template="Hokodo_BNPL::sdk/company-search.phtml"
                   ifconfig="payment/hokodo_bnpl/active">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Hokodo\BNPL\ViewModel\CompanySearch</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="btn_hokodo_checkout" destination="product.info.main" after="product.info.overview"/>
    </body>
</page>
