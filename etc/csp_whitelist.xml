<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="segment-cdn" type="host">https://cdn.segment.com</value>
                <value id="hokodo" type="host">https://*.hokodo.co</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="segment-cdn" type="host">https://cdn.segment.com</value>
                <value id="segment-io" type="host">https://api.segment.io</value>
                <value id="hokodo" type="host">https://*.hokodo.co</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="hokodo" type="host">https://*.hokodo.co</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="segment-cdn" type="host">https://cdn.segment.com</value>
                <value id="segment-io" type="host">https://api.segment.io</value>
                <value id="hokodo" type="host">https://*.hokodo.co</value>
                <value id="google-services" type="host">www.googleservices.com</value>
                <value id="google" type="host">*.google.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="google-apis" type="host">*.googleapis.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="google-apis" type="host">*.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
