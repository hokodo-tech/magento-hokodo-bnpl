<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="payment_method_assign_data">
        <observer name="hokodo_bnpl_data_assign" instance="Hokodo\BNPL\Observer\DataAssignObserver" />
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="hokodo_service_quote_submit_before" instance="Hokodo\BNPL\Observer\ProcessOrderPlaceObserver"/>
    </event>
    <event name="sales_model_service_quote_submit_success">
        <observer name="hokodo_service_quote_submit_success" instance="Hokodo\BNPL\Observer\OrderPlaceSuccessObserver"/>
    </event>
    <event name="sales_order_customer_assign_after">
        <observer name="sales_order_customer_assign_user_data" instance="Hokodo\BNPL\Observer\SalesOrderCustomerAssignUserData"/>
    </event>
    <event name="admin_system_config_changed_section_payment">
        <observer name="custom_admin_system_config_changed_section_general" instance="Hokodo\BNPL\Observer\ConfigObserver"/>
    </event>
</config>
